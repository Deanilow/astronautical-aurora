---
import { getLatestLaunches } from '../services/spacex';
import CardLauch from './CardLauch.astro';

const launches = await getLatestLaunches();
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        launches.map(
            ({ id, links, details, flight_number: flighNumber, success }) => (
                <CardLauch
                    id={id}
                    img={links.patch.small}
                    details={details}
                    flightNumber={flighNumber}
                    success={success}
                />
            ),
        )
    }
</div>
